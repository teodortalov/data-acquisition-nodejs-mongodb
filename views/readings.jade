doctype 5
html
  head
    title='Voltage Readings'
    link(rel='stylesheet', href='/stylesheets/style.css')
    link(rel='stylesheet', href='/stylesheets/rickshaw.min.css')
    
  body
    h1='Readings'

    p(id='timePeriods')
        a(id='oneMinute',href='#') One Minute
        |
        a(id='tenMinutes',href='#') Ten Minutes
        |
        a(id='thirtyMinute',href='#') Thirty Minutes
        |
        a(id='oneHour',href='#') One Hour
        |
        a(id='twelveHours',href='#') Twelve Hours
        |
        a(id='oneDay',href='#') One Day
        |
        a(id='oneWeek',href='#') One Week
        |
        a(id='oneMonth',href='#') One Month
        |
        a(id='oneYear',href='#') One Year        
        |
        a(id='allTime',href='#') All Time    

    #graph

    #graphInfo
        span(id='refreshSpan')
            input(type='checkbox', id='refresh', checked='checked')
            label(for='refresh') Auto-Refresh
        span(id='legend')


    script(type='text/javascript',src='/javascripts/d3.min.js')
    script(type='text/javascript',src='/javascripts/d3.layout.min.js')
    script(type='text/javascript',src='/javascripts/rickshaw.min.js')
    script(type='text/javascript',src='/javascripts/jquery.min.js')
    script(type='text/javascript',src='/javascripts/readings.graph.js')
    
